<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory name="">
		<!-- These four properties are responsible for connecting with oracle -->
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.password">hr</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
		<property name="hibernate.connection.username">hr</property>
		<!-- Dialect Responsible for converting HQL to Oracle 10G formats -->
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<!-- Show SQL being generated by hibernate on console -->
		<property name="hibernate.show_sql">true</property>
		<!-- hbm2dll: hibernate mapping to data defination language automatic : 
			create (if table structure exist drop it and create the new one, if table 
			structure does not exist then create the new one) -->
		<property name="hibernate.hbm2ddl.auto">create</property>

		<mapping class="com.sujata.demo.Employee" />
	</session-factory>
</hibernate-configuration>
