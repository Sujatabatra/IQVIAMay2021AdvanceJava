<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Setter Injection (Giving the depedency value with setter) -->
	<bean class="com.sujata.producer.GoodMorning" id="mrng">
		<property name="name" value="Akifa"></property>
	</bean>
	
	<!-- Constructor Injection (Giving the depedency value with constructor) -->
	<bean class="com.sujata.producer.GoodEvening" id="eve">
		<constructor-arg name="name" value="Pratima"></constructor-arg>
	</bean>

</beans>
